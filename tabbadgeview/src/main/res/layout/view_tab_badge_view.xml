<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_tab_badge_view_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/tab_badge_view_title_image_padding"
        android:padding="5dp"
        android:scaleType="center" />

    <TextView
        android:id="@+id/view_tab_badge_view_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="@drawable/color_tab_badge_view_title"
        android:textSize="@dimen/tab_badge_view_title_size" />

</LinearLayout>